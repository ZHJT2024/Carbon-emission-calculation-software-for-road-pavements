<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_captcha_record">
            <field name="name">CAPTCHA Records</field>
            <field name="res_model">captcha.record</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first record.
                </p>
            </field>
        </record>
        <record id="captcha_record_form" model="ir.ui.view">
            <field name="name">captcha.record.form</field>
            <field name="model">captcha.record</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="captcha"/>
                            <field name="token"/>
                            <field name="ip"/>
                            <field name="generation_time"/>
                            <field name="is_expired"/>
                            <field name="is_used"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="captcha_record_tree" model="ir.ui.view">
            <field name="name">captcha.record.tree</field>
            <field name="model">captcha.record</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="captcha"/>
                    <field name="token"/>
                    <field name="ip"/>
                    <field name="generation_time"/>
                    <field name="is_expired"/>
                    <field name="is_used"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_calculation_model">
            <field name="name">Calculation Models</field>
            <field name="res_model">calculation.model</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first record.
                </p>
            </field>
        </record>
        <record id="calculation_model_form" model="ir.ui.view">
            <field name="name">calculation.model.form</field>
            <field name="model">calculation.model</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object" name="start_run" string="RUN"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="params"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="calculation_model_tree" model="ir.ui.view">
            <field name="name">calculation.model.tree</field>
            <field name="model">calculation.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="params"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>


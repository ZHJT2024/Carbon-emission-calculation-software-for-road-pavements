<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.module.category" id="module_calculation">
            <field name="name">Shared Calculation Module</field>
            <field name="description">Shared calculation utilities</field>
        </record>


        <record model="res.groups" id="group_calculation_customer">
            <field name="name">Read-Only</field>
            <field name="category_id" ref="module_calculation"/>
        </record>
        <record model="res.groups" id="group_calculation_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_calculation"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>

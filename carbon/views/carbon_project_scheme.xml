<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_carbon_project_scheme">
            <field name="name">Project Schemes</field>
            <field name="res_model">carbon.project.scheme</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first record.
                </p>
            </field>
        </record>
        <record id="carbon_project_scheme_form" model="ir.ui.view">
            <field name="name">carbon.project.scheme.form</field>
            <field name="model">carbon.project.scheme</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button type="object" name="calc_rough" string="Compute"/>
                    </header>
                    <sheet>
                        <h2>
                            <field name="name" placeholder="Enter scheme name"/>
                        </h2>
                        <group>
                            <field name="project_id"/>
                            <field name="mode"/>
                            <field name="select"/>
                            <field name="is_completed"/>
                            <field name="res_all"/>
                            <field name="res_area"/>
                            <field name="res_year"/>
                            <field name="res_area_year"/>
                            <field name="data"/>
                            <field name="result_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="carbon_project_scheme_tree" model="ir.ui.view">
            <field name="name">carbon.project.scheme.tree</field>
            <field name="model">carbon.project.scheme</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="project_id"/>
                    <field name="name"/>
                    <field name="select"/>
                    <field name="mode"/>
                    <field name="is_completed"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>


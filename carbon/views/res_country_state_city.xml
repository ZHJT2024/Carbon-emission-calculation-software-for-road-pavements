<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<data>
			   <record model="ir.actions.act_window" id="action_res_country_state_city">
					<field name="name">City</field>
					<field name="res_model">res.country.state.city</field>
					<field name="view_mode">tree,form</field>
					<field name="help" type="html">
						<p class="oe_view_nocontent_create">Create your first record.
						</p>
					</field>
       			 </record>
				<record model="ir.ui.view" id="res_city_form_view">
						<field name="name">City</field>
						<field name="model">res.country.state.city</field>
						<field name="type">form</field>
						<field name="arch" type="xml">
								<form >
										<group>
												<field name="name"/>
												<field name="state_id"/>
												<field name="country_id"/>
												<field name="code"/>
												<field name="geo_json"/>
										</group>
								</form>
						</field>
				</record>
				<record model="ir.ui.view" id="hm_city_tree_view">
						<field name="name">City</field>
						<field name="model">res.country.state.city</field>
						<field name="type">tree</field>
						<field name="arch" type="xml">
								<tree>
										<field name="name"/>
										<field name="state_id"/>
										<field name="country_id"/>
										<field name="code"/>
								</tree>
						</field>
				</record>

		</data>
</odoo>

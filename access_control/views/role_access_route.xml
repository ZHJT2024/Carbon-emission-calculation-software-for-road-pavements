<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="action_role_access_route">
            <field name="name">Route Permissions</field>
            <field name="res_model">role.access.route</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first record.
                </p>
            </field>
        </record>
        <record id="role_access_route_form" model="ir.ui.view">
            <field name="name">role.access.route.form</field>
            <field name="model">role.access.route</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="path"/>
                            <field name="route_id"/>
                            <field name="role_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="role_access_route_tree" model="ir.ui.view">
            <field name="name">role.access.route.tree</field>
            <field name="model">role.access.route</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="path"/>
                    <field name="route_id"/>
                    <field name="role_id"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>

